<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-positions-table" author="hrms">
        <createTable tableName="positions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="structure_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="rank" type="VARCHAR(100)"/>
            <column name="category" type="VARCHAR(50)"/>
            <column name="required_grade" type="VARCHAR(100)"/>
            <column name="required_corps" type="VARCHAR(100)"/>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="current_personnel_id" type="BIGINT"/>
            <column name="assignment_date" type="DATE"/>
            <column name="responsibilities" type="TEXT"/>
            <column name="required_qualifications" type="TEXT"/>
            <column name="min_experience_years" type="INT"/>
            <column name="is_managerial" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="reports_to_position_id" type="BIGINT"/>
            <column name="budget_code" type="VARCHAR(50)"/>
            <column name="active" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="deleted" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="deleted_at" type="TIMESTAMP"/>
            <column name="deleted_by" type="VARCHAR(100)"/>
            <column name="created_by" type="VARCHAR(100)"/>
            <column name="created_date" type="DATE"/>
            <column name="updated_by" type="VARCHAR(100)"/>
            <column name="updated_date" type="DATE"/>
            <column name="version" type="INT" defaultValueNumeric="0"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="positions"
                baseColumnNames="structure_id"
                constraintName="fk_position_structure"
                referencedTableName="administrative_structures"
                referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
