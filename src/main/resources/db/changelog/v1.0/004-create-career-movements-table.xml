<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-create-career-movements-table" author="hrms">
        <createTable tableName="career_movements">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="personnel_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="movement_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="movement_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="decision_number" type="VARCHAR(100)"/>
            <column name="decision_date" type="DATE"/>
            <column name="source_position_id" type="BIGINT"/>
            <column name="source_structure_id" type="BIGINT"/>
            <column name="source_grade" type="VARCHAR(100)"/>
            <column name="destination_position_id" type="BIGINT"/>
            <column name="destination_structure_id" type="BIGINT"/>
            <column name="destination_grade" type="VARCHAR(100)"/>
            <column name="reason" type="TEXT"/>
            <column name="notes" type="TEXT"/>
            <column name="is_official_cumul" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="duration_months" type="INT"/>
            <column name="end_date" type="DATE"/>
            <column name="status" type="VARCHAR(50)"/>
            <column name="approved_by" type="VARCHAR(100)"/>
            <column name="approval_date" type="DATE"/>
            <column name="document_path" type="VARCHAR(500)"/>
            <column name="deleted" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="deleted_at" type="TIMESTAMP"/>
            <column name="deleted_by" type="VARCHAR(100)"/>
            <column name="created_by" type="VARCHAR(100)"/>
            <column name="created_date" type="DATE"/>
            <column name="updated_by" type="VARCHAR(100)"/>
            <column name="updated_date" type="DATE"/>
            <column name="version" type="INT" defaultValueNumeric="0"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="career_movements"
                baseColumnNames="personnel_id"
                constraintName="fk_movement_personnel"
                referencedTableName="personnel"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="career_movements"
                baseColumnNames="source_position_id"
                constraintName="fk_movement_source_position"
                referencedTableName="positions"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="career_movements"
                baseColumnNames="destination_position_id"
                constraintName="fk_movement_dest_position"
                referencedTableName="positions"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="career_movements"
                baseColumnNames="source_structure_id"
                constraintName="fk_movement_source_structure"
                referencedTableName="administrative_structures"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="career_movements"
                baseColumnNames="destination_structure_id"
                constraintName="fk_movement_dest_structure"
                referencedTableName="administrative_structures"
                referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
